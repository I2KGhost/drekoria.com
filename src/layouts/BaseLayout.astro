---
const { title = "Drekoria — League Portal", description = "Join the League of Explorers and receive your Explorer’s Starter Kit." } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative:wght@700&family=Crimson+Pro:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
      :root{
        --bg:#0e0c0a; --text:#f1e8d5; --muted:#c2b89c; --gold:#c9a35e; --bronze:#a87c3f;
      }
      html,body{height:100%}
      body{
        margin:0; background: radial-gradient(60% 80% at 50% 30%, rgba(201,163,94,0.07), transparent 60%), var(--bg);
        color:var(--text); font-family:"Crimson Pro", serif; -webkit-font-smoothing:antialiased; text-rendering:optimizeLegibility;
      }
      .wrap{min-height:100dvh; display:grid; place-items:center; padding:24px}
      h1{font-family:"Cinzel Decorative", serif; letter-spacing:1px; font-size:clamp(36px,6vw,56px); margin:16px 0 8px}
      .subtitle{color:var(--muted); font-size:clamp(16px,2.5vw,20px); margin:0 0 24px; text-align:center}
      .card{
        width:min(720px, 92vw);
        background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.00));
        border:1px solid rgba(201,163,94,0.25);
        border-radius:18px; padding:28px; backdrop-filter: blur(3px);
        box-shadow: 0 10px 40px rgba(0,0,0,0.6), inset 0 0 0 1px rgba(255,255,255,0.04);
      }
      .center{display:flex; flex-direction:column; align-items:center; text-align:center}
      .logo{width:84px; height:auto; filter: drop-shadow(0 0 12px rgba(201,163,94,0.25))}
      form{display:flex; flex-wrap:wrap; gap:12px; justify-content:center; margin:8px 0 12px}
      input[type="email"]{
        flex:1 1 340px; max-width:460px;
        padding:14px 16px; border-radius:12px; border:1px solid rgba(201,163,94,0.35);
        background:rgba(255,255,255,0.03); color:var(--text); font-size:18px; outline:none;
      }
      input[type="email"]::placeholder{color:#9d9278}
      button{
        padding:14px 18px; border-radius:12px; border:1px solid rgba(201,163,94,0.55);
        background: linear-gradient(180deg, var(--gold), var(--bronze));
        color:#1b1206; font-weight:700; font-family:"Crimson Pro", serif; letter-spacing:.3px; cursor:pointer;
        transition: transform .2s ease, box-shadow .2s ease;
      }
      button:hover{ transform: translateY(-1px); box-shadow:0 6px 20px rgba(201,163,94,0.35) }
      .note{margin-top:4px; color:var(--muted)}
      .fine{font-size:14px; color:#8f856f}
      .particles{
        position:fixed; inset:0; pointer-events:none; opacity:.25;
        background-image: radial-gradient(2px 2px at 20% 30%, rgba(201,163,94,.35), transparent 60%),
                          radial-gradient(1.5px 1.5px at 70% 60%, rgba(201,163,94,.25), transparent 60%),
                          radial-gradient(1px 1px at 40% 80%, rgba(201,163,94,.2), transparent 60%);
        animation: drift 20s linear infinite;
      }
      @keyframes drift{ from{transform:translateY(0)} to{transform:translateY(-40px)} }
      a.link{color:var(--gold); text-decoration:none; border-bottom:1px solid rgba(201,163,94,0.4)}
      a.link:hover{border-bottom-color:transparent}
    </style>
  </head>
  <body>
    <div class="particles"></div>
    <div class="wrap">
      <slot />
    </div>
  </body>
</html>
